<h1>Articles</h1>

Title: <%= @article.title %>
<br>
<br>
Body: <%= @article.body %>

<ul>
  <li>
    <%= link_to 'Edit', edit_article_path(@article) %><br>
  </li>
  <li>
    <%= link_to 'Home', root_path %>
  </li>
  <li>
    <%= link_to 'Delete', article_path(@article), data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure?'
    } %>
  </li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
